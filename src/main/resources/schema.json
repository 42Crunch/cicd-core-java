{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "audit": {
      "type": "object",
      "properties": {
        "branches": {
          "additionalProperties": {
            "$ref": "#/definitions/config"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["audit"],
  "definitions": {
    "config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fail_on": { "$ref": "#/definitions/failureConditions" },
        "extensions": { "$ref": "#/definitions/extensions" },
        "mapping": { "$ref": "#/definitions/mapping" },
        "discovery": {
          "oneOf": [
            { "$ref": "#/definitions/discovery" },
            { "type": "boolean" }
          ]
        }
      }
    },
    "failureConditions": {
      "type": "object",
      "properties": {
        "unmapped_files": {
          "type": "boolean"
        },
        "invalid_contract": {
          "type": "boolean"
        },
        "issue_id": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "severity": {
          "oneOf": [
            { "$ref": "#/definitions/severityEnum" },
            { "$ref": "#/definitions/severityPerCategory" }
          ]
        },
        "score": {
          "oneOf": [
            { "$ref": "#/definitions/scoreOverall" },
            { "$ref": "#/definitions/scorePerCategory" }
          ]
        }
      },
      "additionalProperties": false
    },
    "scoreOverall": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "scorePerCategory": {
      "type": "object",
      "properties": {
        "data": {
          "type": "integer",
          "minimum": 0,
          "maximum": 70
        },
        "security": {
          "type": "integer",
          "minimum": 0,
          "maximum": 30
        }
      },
      "additionalProperties": false
    },
    "severityEnum": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "info"]
    },
    "severityPerCategory": {
      "type": "object",
      "properties": {
        "data": { "$ref": "#/definitions/severityEnum" },
        "security": { "$ref": "#/definitions/severityEnum" }
      },
      "additionalProperties": false
    },
    "discovery": {
      "type": "object",
      "properties": {
        "search": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "mapping": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        }
      },
      "additionalProperties": false
    },
    "extensions": {
      "type": "object",
      "properties": {
        "skip_issues": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
